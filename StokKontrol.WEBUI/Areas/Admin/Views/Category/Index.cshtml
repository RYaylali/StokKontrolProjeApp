@using StokKontrol.Domain.Entities;
@{
	ViewData["Title"] = "Index";
}
@model List<Category>
<h1>Index</h1>

<div class="content">
	<div class="animated fadeIn">
		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<strong class="card-title">Kategoriler</strong>
					</div>
					<div class="card-body">
						<table id="bootstrap-data-table" class="table table-striped table-bordered">
							<thead>
								<tr>
									<th>Kategori Adı</th>
									<th>Açıklama</th>
									<th>Durumu</th>
									<th>İşlemler</th>
								</tr>
							</thead>
							<tbody>
								@foreach (Category item in Model)
								{
									@if (item.IsActive)
									{


										<tr>
											<td>@item.CategorrName</td>
											<td>@item.Description</td>
											<td>
												@if (@item.IsActive)
												{
													<span>Aktif</span>
												}
												else
												{
													<span>Pasif</span>
												}

											</td>
											<td>
												<a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class=" btn btn-warning btn-sm"> <i class="fa fa-edit"> </i> Güncelle</a>
												 |
												<a asp-area="Admin" asp-controller="Category" asp-action="DeletedCategory" asp-route-id="@item.Id" class=" btn btn-warning btn-sm"> <i class="fa fa-trash-o"> </i>Sil </a>
											</td>
										</tr>
									}
									else
									{
										<tr>
											<td>@item.CategorrName</td>
											<td>@item.Description</td>
											<td>
												@if (@item.IsActive)
												{
													<span>Aktif</span>
												}
												else
												{
													<span>Pasif</span>
												}

											</td>
											<td>
												<a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class=" btn btn-warning btn-sm"> <i class="fa fa-edit"> </i> Güncelle</a>
												|
												<a asp-area="Admin" asp-controller="Category" asp-action="ActivateCategory" asp-route-id="@item.Id" class=" btn btn-warning btn-sm"> <i class="fa fa-edit"> </i> Aktifleştir</a>
											</td>
										</tr>
									}
								}


							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@section Css{
	<link rel="stylesheet" href="~/temp/assets/css/lib/datatable/dataTables.bootstrap.min.css">

}
@section Scripts{
	<script src="~/temp/assets/js/lib/data-table/datatables.min.js"></script>
	<script src="~/temp/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
	<script src="~/temp/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
	<script src="~/temp/assets/js/init/datatables-init.js"></script>
}



<script type="text/javascript">
	$(document).ready(function () {
		$('#bootstrap-data-table-export').DataTable();
	});
</script>